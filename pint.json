{
    "preset": "laravel",
    "rules": {
      "binary_operator_spaces": {
        "default": "align_single_space_minimal"
      },
      "ordered_imports": {
        "sort_algorithm": "alpha"
      },
      "no_unused_imports": true,
      "not_operator_with_successor_space": true,
      "trailing_comma_in_multiline": {
        "elements": ["arrays"]
      },
      "phpdoc_separation": false
    },
    "exclude": [
      "bootstrap",
      "storage",
      "vendor"
    ]
  }
  